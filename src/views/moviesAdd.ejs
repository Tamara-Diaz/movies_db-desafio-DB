<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">

            <form action="/movies/create" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" value="<%= locals.old?.title %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"><%= errors?.title?.msg %></div>
            <% } %>

            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" value="<%= locals.old?.rating %>" > </p>
            <% if (locals.errors) { %>
                <div class="error"><%= errors?.rating?.msg %></div>
            <% } %>

            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" value="<%= locals.old?.awards %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"><%= errors?.awards?.msg %></div>
            <% } %>

            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" value="<%= locals.old?.release_date %>" ></p>
            <% if (locals.errors) { %>
                <div class="error"><%= errors?.release_date?.msg %></div>
            <% } %>

            <label for="length">Length </label>
            <p><input type="number" name="length" id="" value="<%= locals.old?.length %>"></p>
            <% if (locals.errors) { %>
                <div class="error"><%= errors?.length?.msg %></div>
            <% } %>

            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>